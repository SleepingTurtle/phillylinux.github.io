#!/usr/bin/perl

$datfile = "pics.dat";
$output = "index.html";

open (DATFILE, "<$datfile") or die "can't read from $datfile $!\n";

$linenum=0;
while (<DATFILE>)
{
  $line[$linenum++]=$_;
}

open (OUTPUT, ">$output") or die "can't write to all.html $!\n";

$numlines=scalar(@line);
print STDERR "$numlines lines.\n";

for $linenum (0 .. $numlines-1)
{
  print "$linenum\n";
  ($file,$info) = split(/	/, $line[$linenum]);
  print "$file\n$info\n";
}

